    $.ajax({
        method:'get',
        url:'/Xuly/loadList_star',
    }).done((data)=>{
        let rs = []
        for(let i = 0 ; i <5 ; i++){
            rs.push(data[i].avg_star)
        }
        $('#point_star').text(data[6].point_start+" / 5")
        $('#point_vote').text(data[7].point_vote+" %")
