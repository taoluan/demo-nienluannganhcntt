<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Registration</title>
    <link rel="stylesheet" type="text/css" href="../../public/css/registrationad.css">
    <link rel="stylesheet" type="text/css" href="../../public/css/formlogin.css">
    <link href="../../public/css/agency.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../public/css/bootstrap_file_field.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../elements/headerjob'); -%>
            <%- include('../elements/formlogin'); -%>
        </div>
        <div class="row register">
                <div class="col-md-3 register-left">
                    <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
                    <h3>Welcome to Viec-JOB</h3>
                    <p>Trở thành nhà tuyển dụng tốt nhất</p>
                    <input class="sm-login" type="submit" name="" value="Đăng nhập"/><br/>
                </div>
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLongTitle">Thêm công việc</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="recipient-name"  class="col-form-label">Tên công việc:</label>
                                <input type="text" class="form-control" id="addname">
                              </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="button" class="btn btn-primary save">Save changes</button>
                        </div>
                      </div>
                    </div>
                </div>
                <div class="col-md-9 register-right">
                                <h3 class="register-heading">Trở thành nhà tuyển dụng</h3>
                                <form id='f_signupad' enctype="multipart/form-data" action="/admin/signup" method="post" >
                                    <div class="row register-form">
                                        <div class="col-md-6">                       
                                            <div class="form-group">
                                                <input type="text" class="check form-control"  name='namecpn' placeholder="Tên nhà tuyển dụng "  required/>
                                                <div class="valid-feedback">Có thể sử dụng tên công ty này</div>
                                                <div class="invalid-feedback">Tên công ty đã được sử dụng</div>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" name='link' placeholder="Website của NTD"  required/>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" name='title' placeholder="Title của NTD"  required/>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" name='address'  placeholder="Địa chỉ hiện tại" required/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="country" placeholder="Thuộc quốc gia nào ?" required/>
                                            </div>
                                            <div class="form-group ">
                                            <input type="text" class="form-control" name='city'  placeholder="Thuộc thành phố nào ?" required/>
                                            </div>
                                            <div class="form-group">
                                                <select id='sel'name='work' class="custom-select browser-default " style="width:350px" required>
                                                    <option value="" class="hidden"  selected disabled>Công việc</option>
                                                    <option value="Product">Product</option>
                                                    <option value="Outsourcing">Outsourcing</option>
                                                </select>
                                                <button type="button" class="btn btn-primary" style="margin-left: 4px;" data-toggle="modal" data-target="#exampleModalCenter">
                                                    <i class="fas fa-plus-circle"></i>
                                                  </button>
                                            </div>
                                            <div class="form-group ">
                                                <div class="custom-file ">
                                                    <input type="file" class="custom-file-input btn-default" name="uplogo" data-file-types="image/jpeg,image/png,image/gif" data-field-type="bootstrap-file-filed" id="customFile" required>
                                                    <label class="custom-file-label" for="customFile">Logo của công ty</label>
                                                  </div>
                                                </div>
                                        </div>
                                        <div class="col-md-6 ">
                                            <div class="form-group">
                                                <input type="email" class="check form-control" name="email" placeholder="Email "required/>
                                                <div class="valid-feedback">Bạn có thể sử dụng email này</div>
                                                <div class="invalid-feedback">Email đã có người sử dụng</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 ">
                                           <div class="form-group">
                                            <input type="password" class="form-control" name="password" placeholder="Password *"  required/>
                                        </div> 
                                        </div>
                                        <div class=" col-md-12 d-flex justify-content-center">
                                            <button type="submit" class="btcheck btn btn-primary w-50">Đăng ký</button> 
                                        </div>
                                    </div>
                                </form>
                </div>
        </div>
        <div class="row login" style="margin-top: 100px;">
            <%- include('login'); -%>
        </div>
        <div class="modal" id="success_signup">
            <div class="modal-dialog">
              <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header ">
                  <h4 class="modal-title d-flex justify-content-center">Đăng ký thành công</h4>
                  <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                
                <!-- Modal body -->
                <div class="modal-body text-center">
                  Chúc mừng bạn đã đăng ký thành công !!! <br>
                  Bạn đã chở thành nhà tuyển dụng
                </div>
                
                <!-- Modal footer -->
                <div class="modal-footer d-flex justify-content-center">
                  <button  type="button" class="checkok btn btn-primary text-center w-50" data-dismiss="modal">Hoàn tất</button>
                </div>
                
              </div>
            </div>
          </div>
    </div>
</body>
    <script type="text/javascript" src="../public/js/bootstrap_file_field.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="../../public/js/forms.js"></script>
    <script>
         $('#f_signupad').submit( function(e){
            let emailc = $("#f_signupad input[name='email']").val();
            let namec = $("#f_signupad input[name='namecpn']").val();
            e.preventDefault();
             $.ajax({
                url: '/check/signupadmin',
                method: 'post',
                data: {
                    email : emailc,
                    name : namec,
                },
              success: function(data){
                    if(data == 'true'){
                       $('.check').addClass('is-valid');
                       $('.check').removeClass(('is-invalid'));
                        $('.btcheck').attr('data-toggle', 'modal');
                       $('.btcheck').attr('data-target', '#success_signup');
                        $('.checkok').click(function(){
                            e.currentTarget.submit();
                        })
                    }else {
                        $('.check').addClass(('is-invalid'));
                    }
                }
            })
        })
        $(document).ready(function(){
            $('.login').hide();
            $('.sm-login').click(function(){
                $('.login').show('slow');
                $('.register').hide();

            });
            $("nav-link").click(function(){
                $(this).tab('show');
            });
            $('.click').click(function(){
                $(this).tab('show');
            });
            $(".nav-tabs a").click(function(){
                $(this).tab('show');
            });
            $('.save').click(function(){
               let addname =  $('#addname').val();
               if(addname !== ''){
                $('#sel').append( '<option value="'+addname+'">'+addname+'</option>');
                $('.save').attr("data-dismiss","modal");  
               }
            })          
        })
    </script>
</html>