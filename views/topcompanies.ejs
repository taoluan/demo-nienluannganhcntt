<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <meta content="text/html; charset=utf-8" />
    <link rel="stylesheet" type="text/css" href="../../public/css/topcompanies.css">
    <link href="../../public/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../../public/css/formlogin.css">
    <link href="../../public/css/agency.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
</head>
<body>
    <div class="container-md">
        <div class="row">
          <% if(authentication){%>
            <%- include('user/header_2'); -%>
        <%}else{%>
            <%- include('elements/headerjob');-%>
            <%- include('elements/formlogin');-%>
        <%}%>
        </div>
        <div class="row" style="margin-top: 55px;background-color: whitesmoke">
            <div class="col-12">
            <div class="jumbotron text-center" style="margin-bottom: 0px;background-color: whitesmoke;">
                <div class="title">
                    <h1>TOP #20 những công ty hàng đầu</h1>
                </div>
                <div class="cup" style="margin-top:10px ;margin-bottom: 0px;"><i class="fas fa-trophy fa-2x"></i> <i class="fas fa-trophy fa-4x"></i> <i class="fas fa-trophy fa-2x"></i></div>
              </div>
              <div class="container" style="background:white;border: 1px solid #e3e3e3;">
                <div class="row">
                  <%topcpn.map((val,idx)=>{%>
                    <div class="col-12">
                      <div class="card flex-row flex-wrap w-90">
                        <div class="img-square-wrapper">
                          <img src="<%=val.companies.image.logo%>" height="200" width="200" alt="">
                        </div>
                          <div class="col-xl-6 col-sm-7 col-6 card-block px-2" >
                              <h4 class="card-title" style="margin-top: 10px;"><a href="/companies/<%=val.companies.name%>&<%=val.companies._id%>">#<%=idx + 1%> <%=val.companies.name%></a></h4>
                              <p class="card-text text-secondary font-italic">" <%=val.intro.substring(0,250)%>..."</p>
                          </div>
                          <div class="col-xl-3 text-center rank mt-3">
                                  <%if(Number.isInteger(val.companies.point.point_start)){%>
                                    <h1 class="rating-num text-dark"><%=val.companies.point.point_start%>.0</h1>
                                  <%}else{%>
                                    <h1 class="rating-num text-dark"><%=val.companies.point.point_start%></h1>
                                    <%}%>
                                  <div class="rating">
                                    <%for(let k = 0 ; k < Math.floor(val.companies.point.point_start) ;k++){%>
                                      <button type="button" class="btn btn-warning btn-sm" aria-label="Left Align">
                                        <span class="fas fa-star text-white" aria-hidden="true"></span>
                                      </button>
                                      <%}%>
                                      <%for(let j = 0 ; j < Math.ceil(5-val.companies.point.point_start);j++){%>
                                        <button type="button" class="btn btn-default btn-grey btn-sm bg-secondary" aria-label="Left Align">
                                          <span class="fas fa-star text-white" aria-hidden="true"></span>
                                        </button>
                                        <%}%>
                                 </div>
                                 <div class="rating mt-3">
                                  <h3 class="rating text-primary mb-1 mt-1"><%=val.companies.point.point_vote%> %</h3>
                                  <h6 class="rating small">Lượt bình chọn nên làm việc tại đây</h6>
                                </div>
                          </div>
                      </div>
                    </div>
                  <%})%>
                </div>
              </div>
            </div>
        </div>
        <div class="row" style=" padding-bottom:20px;margin-top: 10px; background-color: #221f20;color: white;box-shadow: 0 4px 8px 0 rgba(236, 236, 236, 0.2);">
          <%- include('elements/listsearch2') -%>
      </div>
    </div>
</body>
<script src="../../public/js/jquery.min.js"></script>
<script src="../../public/js/bootstrap.bundle.min.js"></script>
<script src="../../public/js/agency.min.js"></script>
<script src="../../public/js/forms.js"></script>
<script src="../../public/js/showcpn.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script> 
const choices = new Choices('[data-trigger]',
    {
        searchEnabled: false,
        itemSelectText: '',
    });
    $(document).ready(function(){
        $(".nav-tabs a").click(function(){
            $(this).tab('show');
        });
    });
</script>
</html>