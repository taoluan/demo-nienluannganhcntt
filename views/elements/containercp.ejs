<script>
    $(document).ready(()=>{
        $('#follow').click(()=>{
            let id_cpn = $('#follow').attr('value')
            $.ajax({
                method:'get',
                url:'/Xuly/follow',
                data:{id_cpn:id_cpn}
            })
            .done((data)=>{
                if(data){
                    location.reload();
                }else{
                    alert('Xin lỗi hệ thống đang bị lỗi. Vui lòng quay lại sao')
                }
            })
        })
        $('#follow_check').hover(()=>{
            $('#dangtheogioi').text('Hủy theo dõi')
            $('#dangtheogioi').css({"color":"#FFD700"})
        },()=>{
            $('#dangtheogioi').css({"color":"white"})
            $('#dangtheogioi').text('Đang theo dõi')
        })
        $('#follow_check').click(()=>{
            let id_cpn = $('#follow_check').attr('value')
            $.ajax({
                method:'get',
                url:'/Xuly/unfollow',
                data:{id_cpn:id_cpn}
            })
            .done((data)=>{
                if(data){
                    location.reload();
                }else{
                    alert('Xin lỗi hệ thống đang bị lỗi. Vui lòng quay lại sao')
                }
            })
        })
    })
</script>