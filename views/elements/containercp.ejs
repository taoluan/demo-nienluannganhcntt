                            <div class="card-body" style="padding-top: 5px;padding-bottom: 5px;">
                            <h3 class="conten card-title font-2">Lợi ích khi làm việc tại đây</h3>
                            <ul style="list-style-type: none">
                                <% if(Infor.Benefits.work_environment){%>
                                    <li><h6 class="font-2">Môi trường làm việc</h6>
                                    <ul>
                                        <% temp = Infor.Benefits.work_environment.split('*') %>
                                        <% temp.forEach(element => {%>
                                        <%  element = element.trim()%>
                                            <% if(element !== ''){%>
                                            <li>
                                                <p class="card-text"><%= element%> </p>
                                            </li> 
                                            <%}%>
                                        <%});%>
                                    </ul>
                                    </li>   
                                <%}%>
