                                    <li><h6 class="font-2">Bạn sẽ nhận được gì khi làm tại đây</h6>
                                    <ul>
                                        <% temp = Infor.Benefits.bonus.split('*') %>
                                        <% temp.forEach(element => {%>
                                        <%  element = element.trim()%>
                                            <% if(element !== ''){%>
                                            <li>
                                                <p class="card-text"><%= element%> </p>
                                            </li> 
                                            <%}%>
                                        <%});%>
                                    </ul>
                                    </li>   
                                <%}%>
                            </ul>
                            </div>
                        </div>
                        <%}%>
                    </div>
                </div>
                <div class="col-xl-4 col-right">
                    <div class="row" style="background-color:#fff;margin-bottom: 10px;border: 1px solid #e3e3e3; border-radius: 5px;" >
                        <div class="col-12" style="margin-top: 5px;">
                            <div class="card text-center h-100" style="border:none">
                                <div class="row p-2 no-gutters rounded">
                                    <div class="col-6 rounded">
                                        <div class="card card-block text-primary rounded-0 border-left-0 border-right-0 border-top-0 border-bottom-0">
