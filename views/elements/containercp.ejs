                            <div class="card-body" style="padding-bottom: 5px;">
                            <% if(Infor.choose_us.others){%>
                                <ul>
                                    <% temp = Infor.choose_us.others.split('*') %>
                                    <% temp.forEach(element => {%>
                                    <%  element = element.trim()%>
