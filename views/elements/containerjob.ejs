<div class="container" style="background-color: white;border: 1px solid #e3e3e3;">
    <div class="row" >
        <div class="col-sm-12">
            <center>
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <% for(let i = 1; i < Cpn_infor.choose_us.image.length;i++){%>
                        <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                    <%}%>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="<%=Cpn_infor.choose_us.image[0]%>">
                        </div>
                        <% for(let i = 1; i < Cpn_infor.choose_us.image.length;i++){%>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="<%=Cpn_infor.choose_us.image[i]%>">
                            </div>
                        <%}%>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                    </a>
                </div>
            </center>
        </div>
    </div>
    <div class="container" style="margin-top: 20px; margin-bottom: 10px;">
        <div class="row">
            <div class="col-sm-4 company" >
                <div class="card w-90 shadow-sm rounded" style="background-color: whitesmoke;margin-bottom: 5px; border:none">
                    <img class="card-img-top" src="<%=Job.companies.image.logo%>" alt="Card image cap">
                    <div class="card-body">
                     <h5 class="card-title" style="text-align:center"><a href="/companies/<%=Job.companies.name%>&<%=Job.companies._id%>"><%=Job.companies.name%></a></h5>
                      <p class="card-text text-center"><%=Job.companies.title%></p>
                        <table class="table" style="margin-bottom: 10px;">
                            <tr>
                                <td style="width: 10% ;"><i class="fas fa-cogs"></i></td>
                                <td><p class="card-text" style="line-height: 1.5 ;"> <%=Job.companies.work%></p></td>
                            </tr>
                            <tr>
                                <td style="width: 10%"><i class="fas fa-users"></i></td>
                                <td><p class="card-text " style="line-height:1.5"> <%=Job.companies.member%></p></td>
                            </tr>
                            <tr>
                                <td style="width: 10%"><i class="fas fa-flag-usa"></i></td>
                                <td><p class="card-text" style="line-height: 1.5"> <%=Job.companies.Address.country%></p></td>
                            </tr>
                            <tr>
                                <td style="width: 10%"><i class="fas fa-calendar-alt"></i></td>
                                <td><p class="card-text" style="line-height: 1.5"> <%= Job.companies.workday%></p></td>
                            </tr>
                        </table>
                    <center>
                        <a href="#other_job" class="card-link" ><%=CountJob%> Công việc <i class="fas fa-search-plus"></i></a>
                        <a href="/companies/<%=Job.companies.name%>&<%=Job.companies._id%>" class="card-link" style="margin-top:15px" >Thông tin <i class="fas fa-arrow-right"></i></a>
                    </center>
                    </div>
                </div>
            </div>      
            <div class="col-sm-8">
                <div class="row">
                    <div class="card w-100  border-bottom" style="border:none ; margin-top: 0px;">
                        <div class="card-body" style="padding-top: 0px;">
                          <h2 class="card-title font"><%= Job.title %></h2>
                          <div class="skills">
                            <% Job.skills.forEach(rs=>{%>
                               <a href="#<%=rs%>"><%=rs%></a>
                            <%})%>
                          </div>
                          <div class="intro-job">
                                <p style="margin-bottom: 2px;">
                                    <% if(authentication){%>
                                        <span class="text-success"><i class="fas fa-dollar-sign"></i> <%=Job.salary.money%><%=Job.salary.unit%></span>
                                    <%}else{%>
                                    <i class="fas fa-dollar-sign"></i><a data-toggle="modal" data-target="#myModal" href="#" style="color: gray;"> Đăng nhập để xem</a>
                                    <%}%>
                                </p>
                                <p style="margin-bottom: 2px"><i class="fas fa-map-marker-alt"></i> <%=Job.address%></p>
                                <p style="margin-bottom: 10px; color: #58595b"><i class="far fa-calendar-alt"></i>  <%=date%></p>
                            </div>
                            <% if(authentication){%>
                                <% if(checkJoin){%>
                                    <a href="/ungtuyen" class="btn btn-success btn-lg btn-block w-85">Bạn đã ứng tuyển hồ sơ của bạn đang <%=checkJoin.join[0].status%>...</a>
                                <%}else{%>
                                <button href="#" class="btn btn-primary btn-lg btn-block w-85"  id="ungtuyen">Ứng Tuyển</button>
                                <div class="modal fade" id="NopCV" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h5 class="modal-title" id="exampleModalLabel">Bạn Muốn ứng tuyển <%=Job.title%> Tại <%=Job.companies.name%></h5>
                                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                          </button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <form id="f_ungtuyen">
                                                <div class="container">
                                                    <div class="form-group row ">
                                                        <label for="inputEmail3" class="col-sm-2 col-form-label">Họ Tên</label>
                                                        <div class="col-10">
                                                        <input type="text" class="form-control w-75" name="name" id="inputEmail3" value="<%= us_pro.fullname %>" placeholder="Email">
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <% if(!us_pro.upCV){ %>
                                                        <label for="cv" class="col-2 col-form-label">Gữi CV</label>
                                                        <div class="col-10 d-flex justify-content-start" id="cv">
                                                            <input id="upcv" class="float-right" type="file" name="upcv" data-field-type="bootstrap-file-filed"
                                                            data-label="Upload CV"
                                                            data-btn-class="btn-success"
                                                            accept=".doc, .docx, .pdf"
                                                            value="<%=us_pro.upCV%>"
                                                            multiple required>
                                                        </div>
                                                        <% }else { %>
                                                        <label for="cv" class="col-2 col-form-label">Gữi CV</label>
                                                        <div class="col-10 d-flex justify-content-start" id="cv">
                                                            <input id="upcv" class="float-right" type="file" name="upcv" data-field-type="bootstrap-file-filed"
                                                            data-label="Thay đổi CV"
                                                            data-btn-class="btn-success"
                                                            accept=".doc, .docx, .pdf"
                                                            value="<%=us_pro.upCV%>"
                                                            multiple >
                                                            <p id='check_an' class="text-success ml-2 mt-1"><i class="fas fa-check"></i> <%=us_pro.upCV%></p>
                                                        </div>
                                                        <%}%>
                                                    </div>
                                                </div>
                                        </div>
                                        <div class="modal-footer d-flex justify-content-center">
                                          <button type="button" id="btn_ungtuyen" class="btn btn-primary" >Ứng Tuyển</button>
                                        </div>
                                    </form>
                                      </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="NopCVOK" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h5 class="modal-title text-center" id="exampleModalLabel">Chúc Mừng Bạn đã ứng tuyển thành công !</h5>
                                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                          </button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <p>Vui lòng đợi phản hồi từ nhà tuyển dụng và kiểm tra <i class="far fa-envelope"></i> thường xuyên</p> 
                                        </div>
                                        <div class="modal-footer">
                                          <a  href="/ungtuyen" class="btn btn-success">Thành Công</a>
                                        </div>
                                      </div>
                                    </div>
                                </div>
                                <%}%>
                            <%}else{%>
                            <a href="#" class="btn btn-primary btn-lg btn-block w-85" data-toggle="modal" data-target="#myModal" id="ungtuyen">Ứng Tuyển</a>
                            <%}%>
                        </div>
                    </div>
                </div>
                <% str = Cpn_infor.choose_us.reasons%>
                <% if(str){%>
                    <div class="row bonus-job font">    
                        <div class="card w-100" style="border:none; ">
                                <div class="card-body pb-0">
                                    <h5 class="card-title">3 Lý Do Để Gia Nhập Công Ty </h5>
                                    <ul>
                                <% temp =str.split('*') %>
                                <% temp.forEach(function(element,index) {%>
                                <%  element = element.trim()%>
                                <% if(element !== ''){%>
                                <li>
                                    <p class="card-text"><%= element%> </p>
                                </li> 
                                <%}})%>
                                </ul>
                            </div>
                        </div>
                    </div>
                <%}%>
                    <div class="row describe-job font mt-3">
                        <div class="card w-100" style="border:none">
                            <div class="card-body pb-0 pt-0">
                                <h5 class="card-title">Mô tả công việc</h5>
                                <ul>
                                <% temp =Job.descript.split('*') %>
                                <% temp.forEach(function(element,index) {%>
                                <%  element = element.trim()%>
                                    <% if(element !== ''){%>
                                    <li><p class="card-text"><%= element%> </p></li> 
                                <%}})%>
                            </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row request-job font">
                        <div class="card w-100" style="border:none">
                            <div class="card-body" style="padding-top: 0px;">
                                <h5 class="card-title">Yêu cầu công việc</h5>
                                <ul>
                                    <li><h6 class="card-text">Về kỹ năng</h6>
                                        <ul>
                                        <% temp =Job.requirements.mandatory.split('*') %>
                                        <% temp.forEach(function(element,index) {%>
                                        <%  element = element.trim()%>
                                            <% if(element !== ''){%>
                                            <li><p class="card-text"><%= element%> </p></li> 
                                        <%}})%>
                                        </ul>
                                    </li>
                                    <% if(Job.requirements.others){%>
                                    <li><h6 class="card-text">Kỹ năng bổ sung</h6>
                                        <ul>
                                    <% temp =Job.requirements.others.split('*') %>
                                    <% temp.forEach(function(element,index) {%>
                                    <%  element = element.trim()%>
                                        <% if(element !== ''){%>
                                        <li><p class="card-text"><%= element%> </p></li> 
                                    <%}})%>
                                    <%}%>
                            </ul>
                            </div>
                        </div>
                    </div>
                <% str = Cpn_infor.choose_us.others%>
                <% if(str){%>
                    <div class="row describe-company font"> 
                        <div class="card w-100" style="border:none; ">
                                <div class="card-body pt-0">
                                    <h5 class="card-title">Lý do bạn sẽ chọn chúng tôi </h5>
                                    <ul style="list-style-type:square">
                            <% temp =str.split('*') %>
                            <% temp.forEach(function(element,index) {%>
                            <%  element = element.trim()%>
                                <% if(element !== ''){%>
                                <li>
                                    <p class="card-text"><%= element%> </p>
                                </li> 
                                <%}})%>
                                </ul>
                            </div>
                        </div>
                    </div>
                <%}%>
            </div>
        </div>
    </div>
</div>
<% if(Job_other.length !== 0){%>
    <div class="container"style="margin-top:10px ;background-color: white;border: 1px solid #e3e3e3;"id='other_job'>
        <div class="row job-new">
                <div class="container" >
                    <div class="row" >
                        <h4>Các công việc tương tự dành cho bạn</h4>
                    </div>
                    <% Job_other.forEach((rs,idx)=>{%>
                        <div class="row d-flex justify-content-center">
                            <div class="col-lg-8 col-12 d-flex justify-content-center">
                                <div class="row">
                                    <div class="card mb-3 hv" style="max-width: 730px">
                                        <div class="row no-gutters">
                                            <div class="col-2 " id="logo">   
                                                <a href=""><img src="<%=Job.companies.image.logo%>" class="card-img" alt="..."></a>
                                            </div>
                                            <div class="col-9 ">
                                                <div class="card-body ml-3">
                                                    <a class="card-title"  href="/vieclamit/<%=rs.title%>&<%=rs._id%>" style="font-size: 22px;font-weight: 450; margin-bottom: 5px;"><%=rs.title%> <%=rs.skills%></a>
                                                    <% if(authentication){%>
                                                        <p><i class="fas fa-dollar-sign text-success"></i> <span class="text-success"> <%= rs.salary.money %> <%= rs.salary.unit %></span></p>
                                                        <%}else{%>
                                                            <p><i class="fas fa-dollar-sign"></i><a data-toggle="modal" data-target="#myModal" href="#" style="color: gray;"> Đăng nhập để xem</a></p>
                                                    <%}%>
                                                    <p><i class="fas fa-map-marked-alt"></i> <%=rs.address%></p>
                                                    <div class="skills">
                                                        <% rs.skills.forEach(rs=>{%>
                                                            <a href="#<%=rs%>"><%=rs%></a>
                                                        <%})%>
                                                    </div>
                                                    <p style="margin-bottom: 5px"><small class="text-muted "> <%=date_other[idx]%> </small> </small>
                                                </div>
                                            </div>
                                            <div class="col-1" ><span class="badge badge-warning" style="color:white;; word-wrap: none;">Hot Job</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%})%>
                </div>
        </div>
    </div>
<%}%>
<style>
.fileList .text-success{
    margin-top: 10px;
    position: absolute;
    margin-left: 5px;
}
</style>