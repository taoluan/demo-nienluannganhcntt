<div class="container" style="background-color: white;border: 1px solid #e3e3e3;">
    <div class="row" >
        <div class="col-sm-12">
            <center>
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <% for(let i = 1; i < Cpn_infor.choose_us.image.length;i++){%>
                        <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                    <%}%>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="<%=Cpn_infor.choose_us.image[0]%>">
                        </div>
                        <% for(let i = 1; i < Cpn_infor.choose_us.image.length;i++){%>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="<%=Cpn_infor.choose_us.image[i]%>">
                            </div>
                        <%}%>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                    </a>
                </div>
            </center>
        </div>
    </div>
    <div class="container" style="margin-top: 20px; margin-bottom: 10px;">
        <div class="row">
            <div class="col-sm-4 company" >
                <div class="card w-90 shadow-sm rounded" style="background-color: whitesmoke;margin-bottom: 5px; border:none">
                    <img class="card-img-top" src="<%=Job.companies.image.logo%>" alt="Card image cap">
                    <div class="card-body">
                     <h5 class="card-title" style="text-align:center"><a href="/companies/Grab(Vietnam)Ltd."><%=Job.companies.name%></a></h5>
                      <p class="card-text text-center"><%=Job.companies.title%></p>
                        <table class="table" style="margin-bottom: 10px;">
                            <tr>
                                <td style="width: 10% ;"><i class="fas fa-cogs"></i></td>
                                <td><p class="card-text" style="line-height: 1.5 ;"> <%=Job.companies.work%></p></td>
                            </tr>
                            <tr>
                                <td style="width: 10%"><i class="fas fa-users"></i></td>
                                <td><p class="card-text " style="line-height:1.5"> <%=Job.companies.member%></p></td>
                            </tr>
                            <tr>
                                <td style="width: 10%"><i class="fas fa-flag-usa"></i></td>
                                <td><p class="card-text" style="line-height: 1.5"> <%=Job.companies.Address.country%></p></td>
                            </tr>
                            <tr>
                                <td style="width: 10%"><i class="fas fa-calendar-alt"></i></td>
                                <td><p class="card-text" style="line-height: 1.5"> <%= Job.companies.workday%></p></td>
                            </tr>
                        </table>
                    <center>
                        <a href="#" class="card-link" >3 Job <i class="fas fa-search-plus"></i></a>
                        <a href="/companies/Grab(Vietnam)Ltd." class="card-link" style="margin-top:15px" >Thông tin <i class="fas fa-arrow-right"></i></a>
                    </center>
                    </div>
                </div>
            </div>      
            <div class="col-sm-8">
                <div class="row">
                    <div class="card w-100  border-bottom" style="border:none ; margin-top: 0px;">
                        <div class="card-body" style="padding-top: 0px;">
                          <h2 class="card-title font"><%= Job.title %></h2>
                          <div class="skills">
                            <% Job.skills.forEach(rs=>{%>
                               <a href="#<%=rs%>"><%=rs%></a>
                            <%})%>
                          </div>
                          <div class="intro-job">
                            <p style="margin-bottom: 2px;">
                                <% if(authentication){%>
                                    <span class="text-success"><i class="fas fa-dollar-sign"></i> <%=Job.salary.money%><%=Job.salary.unit%></span>
                                <%}else{%>
                                  <i class="fas fa-dollar-sign"></i><a data-toggle="modal" data-target="#myModal" href="#" style="color: gray;"> Đăng nhập để xem</a>
                                <%}%>
                            </p>
                            <p style="margin-bottom: 2px"><i class="fas fa-map-marker-alt"></i> <%=Job.address%></p>
                            <p style="margin-bottom: 10px; color: #58595b"><i class="far fa-calendar-alt"></i>  <%=date%></p>
                        </div>
                          <a href="#" class="btn btn-primary btn-lg btn-block w-85" data-toggle="modal" data-target="#myModal" id="ungtuyen">Ứng Tuyển</a>
                        </div>
                    </div>
                </div>
                <% str = Cpn_infor.choose_us.reasons%>
                <% if(str){%>
                    <div class="row bonus-job font">    
                        <div class="card w-100" style="border:none; ">
                                <div class="card-body pb-0">
                                    <h5 class="card-title">3 Lý Do Để Gia Nhập Công Ty </h5>
                                    <ul>
                                <% temp =str.split('*') %>
                                <% temp.forEach(function(element,index) {%>
                                <%  element = element.trim()%>
                                <% if(element !== ''){%>
                                <li>
                                    <p class="card-text"><%= element%> </p>
                                </li> 
                                <%}})%>
                                </ul>
                            </div>
                        </div>
                    </div>
                <%}%>
                    <div class="row describe-job font mt-3">
                        <div class="card w-100" style="border:none">
                            <div class="card-body pb-0 pt-0">
                                <h5 class="card-title">Mô tả công việc</h5>
                                <ul>
                                <% temp =Job.descript.split('*') %>
                                <% temp.forEach(function(element,index) {%>
                                <%  element = element.trim()%>
                                    <% if(element !== ''){%>
                                    <li><p class="card-text"><%= element%> </p></li> 
                                <%}})%>
                            </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row request-job font">
                        <div class="card w-100" style="border:none">
                            <div class="card-body" style="padding-top: 0px;">
                                <h5 class="card-title">Yêu cầu công việc</h5>
                                <ul>
                                    <li><h6 class="card-text">Về kỹ năng</h6>
                                        <ul>
                                        <% temp =Job.requirements.mandatory.split('*') %>
                                        <% temp.forEach(function(element,index) {%>
                                        <%  element = element.trim()%>
                                            <% if(element !== ''){%>
                                            <li><p class="card-text"><%= element%> </p></li> 
                                        <%}})%>
                                        </ul>
                                    </li>
                                    <% if(Job.requirements.others){%>
                                    <li><h6 class="card-text">Kỹ năng bổ sung</h6>
                                        <ul>
                                    <% temp =Job.requirements.others.split('*') %>
                                    <% temp.forEach(function(element,index) {%>
                                    <%  element = element.trim()%>
                                        <% if(element !== ''){%>
                                        <li><p class="card-text"><%= element%> </p></li> 
                                    <%}})%>
                                    <%}%>
                            </ul>
                            </div>
                        </div>
                    </div>
                <% str = Cpn_infor.choose_us.others%>
                <% if(str){%>
                    <div class="row describe-company font"> 
                        <div class="card w-100" style="border:none; ">
                                <div class="card-body pt-0">
                                    <h5 class="card-title">Lý do bạn sẽ chọn chúng tôi </h5>
                                    <ul style="list-style-type:square">
                            <% temp =str.split('*') %>
                            <% temp.forEach(function(element,index) {%>
                            <%  element = element.trim()%>
                                <% if(element !== ''){%>
                                <li>
                                    <p class="card-text"><%= element%> </p>
                                </li> 
                                <%}})%>
                                </ul>
                            </div>
                        </div>
                    </div>
                <%}%>
            </div>
        </div>
    </div>
</div>
