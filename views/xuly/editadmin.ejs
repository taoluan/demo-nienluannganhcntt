                                            <div class="company address"> <span class="icon fas fa-map-marker-alt"><a><%= data.Address.address %></a></span></div>
                                            <div class="company member">
                                                <% if(data.member){ %>
                                                    <span class="fas fa-users">  <a><%= data.member %></a></span>
                                                <% }%>
                                                <span class="fas fa-flag-usa"> <a><%= data.Address.country %></a></span>
